<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>FloatChat Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* General layout styling */
        .row {
            min-height: 100vh;
        }

        /* New CSS for the chat input box */
        .chat-input-container {
            display: flex;
            align-items: center;
            padding: 15px;
            border-top: 1px solid #e0e0e0;
            background-color: #f8f9fa;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }
        #chat-input {
            flex-grow: 1;
            padding: 10px 15px;
            border: 1px solid #ccc;
            border-radius: 25px;
            font-size: 16px;
            margin-right: 10px;
            outline: none;
        }
        #send-button {
            padding: 10px 20px;
            background-color: #0d6efd;
            color: white;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.2s;
        }
        #send-button:hover {
            background-color: #0b5ed7;
        }

        /* Padding for the main content to avoid overlap */
        .col.p-4 {
            padding-bottom: 80px !important;
        }

        /* --- Dark Mode Styles --- */
        /* Theme toggle button styling */
        .theme-switch-wrapper {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1001;
        }
        #theme-toggle {
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        #theme-toggle i {
            color: #333;
            transition: color 0.3s;
        }

        /* Styles applied when the body has the 'dark-mode' class */
        body.dark-mode {
            background-color: #121212 !important;
            color: #e0e0e0;
        }
        body.dark-mode .bg-white {
            background-color: #1e1e1e !important;
        }
        body.dark-mode .border-end {
            border-color: #333 !important;
        }
        body.dark-mode .chat-input-container {
            background-color: #1a1a1a;
            border-top-color: #333;
        }
        body.dark-mode #chat-input {
            background-color: #2a2a2a;
            color: #e0e0e0;
            border-color: #444;
        }
        body.dark-mode #chat-input::placeholder {
            color: #888;
        }
        body.dark-mode #theme-toggle {
            background-color: #333;
            border-color: #444;
        }
        body.dark-mode #theme-toggle i {
            color: #f0f0f0;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container-fluid">
        <div class="row">
            <div class="col-3 bg-white border-end p-3">
                <%- include("partials/sidebar", { regions: regions, selectedRegion: selectedRegion, parameter: parameter }) %>
            </div>
            <div class="col p-4">
                <%- include("partials/querybox", { selectedRegion: selectedRegion, parameter: parameter }) %>
                <%- include("partials/chart", { chartData: chartData, selectedRegion: selectedRegion, parameter: parameter }) %>
            </div>
        </div>
    </div>
    
    <div class="theme-switch-wrapper">
        <button id="theme-toggle">
            <i class="fas fa-sun"></i>
        </button>
    </div>

    <div class="chat-input-container">
        <input type="text" id="chat-input" placeholder="Type your command here...">
        <button id="send-button">Send</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const themeToggleBtn = document.getElementById('theme-toggle');
        const body = document.body;
        const icon = themeToggleBtn.querySelector('i');

        // Check for a saved theme preference on page load
        document.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                body.classList.add('dark-mode');
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            } else {
                body.classList.remove('dark-mode');
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            }
        });

        // Save the theme preference when the button is clicked
        themeToggleBtn.addEventListener('click', () => {
            body.classList.toggle('dark-mode');
            if (body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            } else {
                localStorage.setItem('theme', 'light');
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            }
        });
    </script>
</body>
</html>