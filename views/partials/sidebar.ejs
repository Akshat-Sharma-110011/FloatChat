<h4 class="mb-3">Filters</h4>
<form method="GET" action="/">
  <div class="mb-3">
    <label class="form-label">Region(s)</label>
    <% regions.forEach(r => { %>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="region" value="<%= r %>" id="<%= r %>" <%= selectedRegion.includes(r) ? "checked" : "" %>>
        <label class="form-check-label" for="<%= r %>">
          <%= r %>
        </label>
      </div>
    <% }) %>
  </div>

  <div class="mb-3">
    <label class="form-label">Parameter</label>
    <select name="parameter" class="form-select">
      <option value="salinity" <%= parameter==="salinity"?"selected":"" %>>Salinity</option>
      <option value="temperature" <%= parameter==="temperature"?"selected":"" %>>Temperature</option>
      <option value="pH" <%= parameter==="pH"?"selected":"" %>>pH</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Apply</button>
</form>
